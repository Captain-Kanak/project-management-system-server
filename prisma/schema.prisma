generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRoles {
  ADMIN
  MANAGER
  STAFF
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  DELETED
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      UserRoles  @default(STAFF)
  status    UserStatus @default(ACTIVE)
  invitedAt DateTime   @default(now())
  createdAt DateTime   @default(now())
  projects  Project[]

  @@index([email])
}

model Invite {
  id         String    @id @default(uuid())
  email      String    @unique
  role       UserRoles @default(STAFF)
  token      String
  expiresAt  DateTime
  acceptedAt DateTime
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String
  status      ProjectStatus @default(ACTIVE)
  isDeleted   Boolean       @default(false)
  createdBy   String
  user        User          @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([createdBy])
}
